{
  "ConnectionStrings": {
    "Default": "Data Source=hr.db"
  },
  "Jwt": {
    "Issuer": "hr.local",
    "Audience": "hr.local",
    "SigningKey": "SuperSecretSigningKey_ChangeMe_32chars_min",
    "AccessTokenMinutes": 30,
    "RefreshTokenDays": 7
  },
  "Seed": {
    "AdminEmail": "admin@company.com",
    "AdminPassword": "Admin@12345"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "formatter": "Serilog.Formatting.Compact.CompactJsonFormatter, Serilog.Formatting.Compact"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "AllowedHosts": "*"
}
